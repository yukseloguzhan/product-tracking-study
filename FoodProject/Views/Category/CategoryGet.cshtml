
@model FoodProject.Data.Models.Category

@{
    ViewData["Title"] = "CategoryGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CategoryGet</h1>
<br />

@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post)) //  // 1.parametre: hangi actionresult 2parametre: depart controllerı icinde
{

    <b>CATEGORY ID = </b>
    @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
    <b>CATEGORY NAME = </b>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    <b>CATEGORY DESCRIPTION = </b>
    @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
    <br />
    <button class="btn btn-info" style="background-color:blueviolet">CATEGORY UPDATE</button>
}
